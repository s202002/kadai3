  <div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/profile', user: current_user %>
      <!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

      <h2>New book</h2>
      <%= render 'books/newform', book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <!--users一覧 -->
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
            <td><%= user.name%></td>
            <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
              <td><%= link_to "フォロー数: #{user.follower.count}", follower_user_path(user) %></td></td>
                  <td><%= link_to "フォロワー数: #{user.followed.count}", followed_user_path(user) %></td>
            <% if current_user.following?(user) %>
            <td><%= link_to 'フォローをやめる', unfollow_path(user.id), method: :POST %></td>
            <% else %>
            <td><%= link_to 'フォローする', follow_path(user.id), method: :POST %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>